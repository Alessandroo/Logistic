<web-app
	version="3.0"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <display-name>ncCityCon</display-name>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
    	<servlet-name>UserListServlet</servlet-name>
    	<servlet-class>com.citycon.controllers.servlets.UserListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>UserListServlet</servlet-name>
    	<url-pattern>/app</url-pattern>
    </servlet-mapping>

	<servlet>
		<servlet-name>RegistrationServlet</servlet-name>
		<servlet-class>com.citycon.controllers.servlets.RegistrationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RegistrationServlet</servlet-name>
		<url-pattern>/registration</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>AutorizationServlet</servlet-name>
		<servlet-class>com.citycon.controllers.servlets.AuthorizationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AutorizationServlet</servlet-name>
		<url-pattern>/autorization</url-pattern>
	</servlet-mapping>

    <filter>
    	<filter-name>LoginFilter</filter-name>
    	<filter-class>com.citycon.controllers.filters.LoginFilter</filter-class>
    </filter>
 	<filter-mapping>
 		<filter-name>LoginFilter</filter-name>
 		<url-pattern>/loginfiltertest/*</url-pattern>
 	</filter-mapping>
</web-app>
