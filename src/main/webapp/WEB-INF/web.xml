<web-app
	version="3.0"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <display-name>Logistic</display-name>
    <welcome-file-list>
   		<welcome-file>default</welcome-file>
  	</welcome-file-list>
  	<error-page>
  		<error-code>404</error-code>
  		<location>/jsp/errors/notFound.jsp</location>
  	</error-page>

    <servlet>
        <servlet-name>RootServlet</servlet-name>
        <servlet-class>com.logistic.controllers.servlets.RootServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RootServlet</servlet-name>
        <url-pattern>/default</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SuggestionServlet</servlet-name>
        <servlet-class>com.logistic.controllers.servlets.SuggestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SuggestionServlet</servlet-name>
        <url-pattern>/suggestions</url-pattern>
    </servlet-mapping>


    <!-- Security servlets -->
	<servlet>
		<servlet-name>SignInServlet</servlet-name>
		<servlet-class>com.logistic.controllers.servlets.SignInServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SignInServlet</servlet-name>
		<url-pattern>/signin</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>SignUpServlet</servlet-name>
		<servlet-class>com.logistic.controllers.servlets.SignUpServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SignUpServlet</servlet-name>
		<url-pattern>/signup</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>com.logistic.controllers.servlets.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>



	<!-- Users branch -->
    <servlet>
    	<servlet-name>UserListServlet</servlet-name>
    	<servlet-class>com.logistic.controllers.servlets.UserListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>UserListServlet</servlet-name>
    	<url-pattern>/users</url-pattern>
    </servlet-mapping>

     <servlet>
    	<servlet-name>UserEditServlet</servlet-name>
    	<servlet-class>com.logistic.controllers.servlets.UserEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>UserEditServlet</servlet-name>
    	<url-pattern>/user</url-pattern>
    </servlet-mapping>



	<!-- Cities branch -->
	<servlet>
		<servlet-name>CityListServlet</servlet-name>
		<servlet-class>com.logistic.controllers.servlets.CityListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CityListServlet</servlet-name>
		<url-pattern>/cities</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>CityEditServlet</servlet-name>
		<servlet-class>com.logistic.controllers.servlets.CityEditServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CityEditServlet</servlet-name>
		<url-pattern>/city</url-pattern>
	</servlet-mapping>

	<!-- Orders branch -->
	<servlet>
		<servlet-name>OrderListServlet</servlet-name>
		<servlet-class>com.logistic.controllers.servlets.OrderListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>OrderListServlet</servlet-name>
		<url-pattern>/orders</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>OrderEditServlet</servlet-name>
		<servlet-class>com.logistic.controllers.servlets.OrderEditServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>OrderEditServlet</servlet-name>
		<url-pattern>/order</url-pattern>
	</servlet-mapping>

	<!-- CarCrews branch -->
	<servlet>
		<servlet-name>CarCrewListServlet</servlet-name>
		<servlet-class>com.logistic.controllers.servlets.CarCrewListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CarCrewListServlet</servlet-name>
		<url-pattern>/carCrews</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>CarCrewEditServlet</servlet-name>
		<servlet-class>com.logistic.controllers.servlets.CarCrewEditServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CarCrewEditServlet</servlet-name>
		<url-pattern>/carCrew</url-pattern>
	</servlet-mapping>

	<!-- Recomendation branch -->
	<servlet>
		<servlet-name>RecomendationListServlet</servlet-name>
		<servlet-class>com.logistic.controllers.servlets.RecomendationListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RecomendationListServlet</servlet-name>
		<url-pattern>/recomendations</url-pattern>
	</servlet-mapping>


	<!-- Connections branch -->
	<servlet>
		<servlet-name>ConnectionListServlet</servlet-name>
		<servlet-class>com.logistic.controllers.servlets.ConnectionListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ConnectionListServlet</servlet-name>
		<url-pattern>/connections</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ConnectionEditServlet</servlet-name>
		<servlet-class>com.logistic.controllers.servlets.ConnectionEditServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ConnectionEditServlet</servlet-name>
		<url-pattern>/connection</url-pattern>
	</servlet-mapping>


    <!-- Filters -->
    <filter>
    	<filter-name>LoginFilter</filter-name>
    	<filter-class>com.logistic.controllers.filters.LoginFilter</filter-class>
    </filter>
 	<filter-mapping>
 		<filter-name>LoginFilter</filter-name>
 		<url-pattern>/jsp/*</url-pattern>
 	</filter-mapping>
 	<filter-mapping>
 		<filter-name>LoginFilter</filter-name>
 		<url-pattern>/users</url-pattern>
 	</filter-mapping>
 	<filter-mapping>
 		<filter-name>LoginFilter</filter-name>
 		<url-pattern>/user</url-pattern>
 	</filter-mapping>
 	<filter-mapping>
 		<filter-name>LoginFilter</filter-name>
 		<url-pattern>/cities</url-pattern>
 	</filter-mapping>
 	<filter-mapping>
 		<filter-name>LoginFilter</filter-name>
 		<url-pattern>/city</url-pattern>
 	</filter-mapping>
 	<filter-mapping>
 		<filter-name>LoginFilter</filter-name>
 		<url-pattern>/routers</url-pattern>
 	</filter-mapping>
 	<filter-mapping>
 		<filter-name>LoginFilter</filter-name>
 		<url-pattern>/router</url-pattern>
 	</filter-mapping>
 	<filter-mapping>
 		<filter-name>LoginFilter</filter-name>
 		<url-pattern>/connections</url-pattern>
 	</filter-mapping>
 	<filter-mapping>
 		<filter-name>LoginFilter</filter-name>
 		<url-pattern>/connection</url-pattern>
 	</filter-mapping>

	<!-- User branch filters -->
	 	<filter>
	    	<filter-name>UserEditFilter</filter-name>
	    	<filter-class>com.logistic.controllers.filters.UserEditFilter</filter-class>
	    </filter>
	 	<filter-mapping>
	 		<filter-name>UserEditFilter</filter-name>
	 		<url-pattern>/user</url-pattern>
	 	</filter-mapping>

	 	<filter>
	    	<filter-name>UserListFilter</filter-name>
	    	<filter-class>com.logistic.controllers.filters.UserListFilter</filter-class>
	    </filter>
	 	<filter-mapping>
	 		<filter-name>UserListFilter</filter-name>
	 		<url-pattern>/users</url-pattern>
	 	</filter-mapping>

	 <!-- System units branch filters -->
	 	<filter>
	    	<filter-name>SystemEditFilter</filter-name>
	    	<filter-class>com.logistic.controllers.filters.SystemEditFilter</filter-class>
	    </filter>
	 	<filter-mapping>
	 		<filter-name>SystemEditFilter</filter-name>
	 		<url-pattern>/city</url-pattern>
	 	</filter-mapping>
	 	<filter-mapping>
	 		<filter-name>SystemEditFilter</filter-name>
	 		<url-pattern>/router</url-pattern>
	 	</filter-mapping>
	 	<filter-mapping>
	 		<filter-name>SystemEditFilter</filter-name>
	 		<url-pattern>/connection</url-pattern>
	 	</filter-mapping>
	 	
	 	<filter>
	    	<filter-name>SystemListFilter</filter-name>
	    	<filter-class>com.logistic.controllers.filters.SystemListFilter</filter-class>
	    </filter>
	 	<filter-mapping>
	 		<filter-name>SystemListFilter</filter-name>
	 		<url-pattern>/cities</url-pattern>
	 	</filter-mapping>
	 	<filter-mapping>
	 		<filter-name>SystemListFilter</filter-name>
	 		<url-pattern>/routers</url-pattern>
	 	</filter-mapping>
	 	<filter-mapping>
	 		<filter-name>SystemListFilter</filter-name>
	 		<url-pattern>/connections</url-pattern>
	 	</filter-mapping>

	 	<!-- Listeners -->
	 	<listener>
	 		<listener-class>com.logistic.controllers.listeners.SessionHolder</listener-class>
	 	</listener>
	 	
</web-app>
